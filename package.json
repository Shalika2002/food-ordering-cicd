{
  "name": "secure-food-ordering-api",
  "version": "1.0.0",
  "description": "A secure food ordering API with enhanced security features and best practices.",
  "main": "app-secure.js",
  "scripts": {
    "start": "node app-secure.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "zap:baseline": "node zap-test-frontend.js",
    "zap:full": "ZAP_FULL_SCAN=true node zap-test-frontend.js",
    "zap:headers": "node -e \"const ZapTester = require('./zap-test-frontend.js'); const tester = new ZapTester(); tester.runSecurityHeadersTest();\"",
    "test:security": "npm run zap:baseline",
    "test:security:full": "npm run zap:full"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "express-validator": "^6.14.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.6",
    "zap-test-frontend": "file:../zap-test-frontend"
  },
  "dependencies": {
    "express-mongo-sanitize": "^2.1.0"
  }
}